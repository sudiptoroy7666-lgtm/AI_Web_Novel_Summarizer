<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />


    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/applogo_vector"
        android:label="AI Web Novel Summarizer"
        android:roundIcon="@drawable/applogo_vector"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.WebNovelSummarizer">
        <!-- Summary Activity (preserves TTS state & summary content) -->
        <activity
            android:name=".ui.ActivitySummary"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize" />

        <!-- Library hierarchy activities -->
        <activity
            android:name=".ui.Activity_Library"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize" />
        <activity
            android:name=".ui.NovelDetailActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize" />
        <activity
            android:name=".ui.VolumeDetailActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize" />
        <activity
            android:name=".ui.ChapterDetailActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize" />

        <!-- History/Bookmarks activities -->
        <activity
            android:name=".ui.Activity_History"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize" />
        <activity
            android:name=".ui.Activity_Boolmarks"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize" >
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>